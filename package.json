          },
          "additionalProperties": false,
          "description": "Select target languages for translation"
        },
        "i18nNexus.llmProvider": {
          "type": "string",
          "default": "openai",
          "enum": [
            "openai",
            "gemini",
            "claude",
            "openai-compatible"
          ],
          "description": "Selected LLM provider"
        },
        "i18nNexus.llmModel": {
          "type": "string",
          "default": "gpt-4.1-mini",
          "description": "Specific OpenAI model to use for translations (gpt-4.1-mini balances quality and cost)"
        },
        "i18nNexus.llmApiUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1/responses",
          "description": "API URL for the selected OpenAI model"
        },
        "i18nNexus.llmApiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for the selected LLM provider"
        },
        "i18nNexus.enableDiffView": {
          "type": "boolean",
          "default": true,
          "description": "Show diff view before applying translation changes"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@google/generative-ai": "^0.17.1",
    "axios": "^1.7.7",
    "groq-sdk": "^0.6.1",
    "openai": "^4.57.0"
  }
}
